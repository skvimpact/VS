<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <log4net>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Logs\Reconciliation.log"/>
      <param name="AppendToFile" value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="5MB"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss},%p,%m%n"/>
      </layout>

    </appender>

    <logger name="LOGGER">
      <appender-ref ref="LogFileAppender"/>
    </logger>
  </log4net>
  
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>
  <system.web>
    <compilation debug="true" />
    <membership defaultProvider="ClientAuthenticationMembershipProvider">
      <providers>
        <add name="ClientAuthenticationMembershipProvider" type="System.Web.ClientServices.Providers.ClientFormsAuthenticationMembershipProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" />
      </providers>
    </membership>
    <roleManager defaultProvider="ClientRoleProvider" enabled="true">
      <providers>
        <add name="ClientRoleProvider" type="System.Web.ClientServices.Providers.ClientRoleProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" cacheTimeout="86400" />
      </providers>
    </roleManager>
  </system.web>
  <!-- When deploying the service library project, the content of the config file must be added to the host's 
  app.config file. System.Configuration does not support config files for libraries. -->
  <system.serviceModel>
    <!--<client>
      <endpoint address="http://localhost/RF.Resources/" binding="basicHttpBinding"
        bindingConfiguration="BasicHttpBinding_IRFResourceController"
        contract="RF_Resources.IRFResourceController" name="BasicHttpBinding_IRFResourceController" />
    </client>-->
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IReconciliationController" closeTimeout="00:30:00"
          openTimeout="00:30:00" receiveTimeout="00:30:00" sendTimeout="00:30:00"
          maxReceivedMessageSize="2147483647" />
        <binding name="BasicHttpBinding_IRFResourceController" />
      </basicHttpBinding>
      <webHttpBinding>
        <binding name="BasicHttpBinding_IReconciliationController" closeTimeout="00:30:00"
          openTimeout="00:30:00" receiveTimeout="00:30:00" sendTimeout="00:30:00"
          maxReceivedMessageSize="2147483647" />
      </webHttpBinding>
    </bindings>
    <services>
      <service name="Reconciliation.Controller.ReconciliationController">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8091/Reconciliation/" />
          </baseAddresses>
        </host>
        <!-- Service Endpoints -->
        <!-- Unless fully qualified, address is relative to base address supplied above -->
        <endpoint address="" binding="basicHttpBinding" contract="Reconciliation.Controller.IReconciliationController" >
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <endpoint address="xml" binding="webHttpBinding" behaviorConfiguration="xmlBehavior" contract="Reconciliation.Controller.IReconciliationController" />
      </service>
    </services>
    <!--
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IRFResourceController" />
      </basicHttpBinding>
    </bindings>    
    -->
    
    
    <client>
      <endpoint address="http://localhost/RF.Resources/" binding="basicHttpBinding"
          bindingConfiguration="BasicHttpBinding_IRFResourceController"
          contract="RF_Resources.IRFResourceController" name="BasicHttpBinding_IRFResourceController" />
    </client>
    
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- To avoid disclosing metadata information, 
          set the values below to false before deployment -->
          <serviceMetadata httpGetEnabled="True" httpsGetEnabled="True" />
          <!-- To receive exception details in faults for debugging purposes, 
          set the value below to true.  Set to false before deployment 
          to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="jsonBehavior">
          <enableWebScript />
          <!-- use JSON serialization -->
        </behavior>
        <behavior name="xmlBehavior">
          <webHttp />
          <!-- use XML serialization -->
        </behavior>
      </endpointBehaviors>
    </behaviors>
  </system.serviceModel>

</configuration>